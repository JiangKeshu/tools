"tabstop
set tabstop=2
set shiftwidth=2

set cursorline

:inoremap ( ()<ESC>i
:inoremap ) <c-r>=ClosePair(')')<CR>
:inoremap { {}<ESC>i
:inoremap } <c-r>=ClosePair('}')<CR>
:inoremap [ []<ESC>i
:inoremap ] <c-r>=ClosePair(']')<CR>
:inoremap < <><ESC>i
:inoremap > <c-r>=ClosePair('>')<CR>
           
function ClosePair(char)
	if getline('.')[col('.') - 1] == a:char
		return "<Right>"
	else
		return a:char
	endif
endfunction

