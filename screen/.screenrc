#define panel format: background => white, current window => red, font color => black, with data time in the right
hardstatus alwayslastline "%{= wk}%-w %{= rw}%n %t%{-}%+w %=%Y-%m-%d %c:%s"

#define bindkey
bindkey -k k7 'screen'
bindkey -k k8 'title'
bindkey -k k9 'prev'
bindkey -k k; 'next' 
bindkey -k F2 'kill'

#define bind
bind v eval 'split -v'
bind s eval 'split'
bind j eval 'focus left'
bind k eval 'focus down'
bind l eval 'focus right'
bind i eval 'focus up'
bind x eval 'remove'

